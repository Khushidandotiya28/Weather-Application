    <script src="js/main.js"></script>
    <script>
       
       let getCurrentDay = () => {
            const weekDay = new Array(7);
            weekDay[0] = "Sunday";
            weekDay[1] = "Monday";
            weekDay[2] = "Tuesday";
            weekDay[3] = "Wednesday";
            weekDay[4] = "Thursday";
            weekDay[5] = "Friday";
            weekDay[6] = "Saturday";

            let currentTime = new Date();
            return weekDay[currentTime.getDay()];
             
        };
    let getCurrentTime = () => {
    
    const now = new Date();
    let hours = now.getHours();
    let mins = now.getMinutes();
    let month = now.getMonth() + 1;
    let day = now.getDate();
    let year = now.getFullYear();
    let period = "am";

    if (hours > 11) {
        period = "pm";
        if (hours > 12) hours -= 12;
    }

    if (mins < 10) {
        mins = "0" + mins;
    }
    // Pad day and month with leading zeros if necessary
    if (day < 10) {
        day = "0" + day;
    }
    if (month < 10) {
        month = "0" + month;
    }
    return `${year}/${month}/${day} | ${hours}:${mins}${period}`;
    
};
  let dayElement = document.getElementById('day');
  let curDate = document.getElementById('today_date');
 
  let currentDay = getCurrentDay();
  let currentDateAndTime = getCurrentTime();

  dayElement.innerText = currentDay;
  curDate.innerHTML = `${currentDateAndTime}`;

</script>

